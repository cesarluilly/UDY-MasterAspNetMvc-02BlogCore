@{
    ViewData["Title"] = "Lista de Categorias";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-8">
            <h2 class="text-primary">Lista de Categorias</h2>
        </div>
        <div class="col-4 text-right">
            <a asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-plus"> Crear nueva categoria</i></a>
        </div>
    </div>
    <br />
    <br />
    <table id="tblCategorias" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Orden</th>
                <th>Acciones</th>
            </tr>
        </thead>
        @* Aqui no se necesita tbody, por que el que se va a encargar de hacer esa parte es javascript *@
    </table>

</div>

@section Scripts {
    @* Esta parte es para poner script de javascripts en esta vista*@
    <script src="~/js/categoria.js"></script>
}