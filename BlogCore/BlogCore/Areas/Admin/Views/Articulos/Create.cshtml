@model BlogCore.Models.Articulo

@{
    ViewData["Title"] = "Crear Articulo";
}

<br />
<br />
<h3 class="text-center">Crear un nuevo Articulo</h3>
<form method="POST" asp-action="Create">
    <div class="row px-2 offset-1 border">
        @* <div asp-validation-summary="ModelOnly" class="text-danger"></div> *@
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="col-10 offset-1 mt-4">
            <div class="form-group row">
                <label asp-for="Nombre"></label>
            </div>
            <div class="col-8">
                <input asp-for="Nombre" class="form-control" placeholder="Ingresa el nombre" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
        </div>

        <div class="col-10 offset-1 mt-4">
            <div class="form-group row">
                <label asp-for="Descripcion"></label>
            </div>
            <div class="col-8">
                <input asp-for="Descripcion" class="form-control" placeholder="Ingresa la descripcion" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group-row mt-4">
            <div class="col-8">
                <partial name="_VistaCrearVolver" />
            </div>
        </div>
    </div>
</form>


@section Scripts {
    @* Realiza los datos(modelo Categoria) del lado del cliente
        de manera automatica
    *@
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}